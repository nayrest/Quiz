<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Quiz" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@android:color/black</item>
    </style>

    <!-- Зеленый стиль для правильного ответа -->
    <style name="GreenDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/green</item>
        <item name="android:background">@color/green_light</item>
    </style>

    <!-- Красный стиль для неправильного ответа -->
    <style name="RedDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/red</item>
        <item name="android:background">@color/red_light</item>
    </style>
</resources>